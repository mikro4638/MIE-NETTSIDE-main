  box-shadow: 0 12px 32px rgba(33, 150, 243, 0.35);
}


  .clickable-logo {
    cursor: pointer;
  }

  .fintech-arrow {
    font-size: 1.5rem;
    color: #333;
    margin-top: 5px;
    animation: bounce 1.5s infinite;
  }

  .fintech-text {
    margin-top: 5px;
    font-size: 1rem;
    color: #333;
    font-family: 'Poppins', sans-serif;
  }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-5px); }
  }

  .fintech-title {
    font-size: 2.2rem;
    font-weight: 700;
    background: linear-gradient(90deg, #2196f3, #6a1b9a);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-top: 15px;
    position: relative;
  }

  .fintech-title::after {
    content: "";
    display: block;
    height: 3px;
    background: linear-gradient(90deg, #2196f3, #6a1b9a);
    margin: 6px auto 0;
    width: 0;
    border-radius: 2px;
    transition: width 0.4s ease;
  }

  .fintech-card:hover .fintech-title::after {
    width: 80%;
  }

  /* Animations */
  .fade-in {
    opacity: 0;
    animation: fadeIn 0.8s forwards;
    animation-delay: 0.2s;
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
