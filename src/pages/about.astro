<style is:global>
  body {
    background: #ffefef;
    font-family: 'Poppins', sans-serif;
  }

  .about-container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 60px 20px;
    animation: fadeIn 1s ease forwards;
  }

  .title {
    font-size: 2.8rem;
    color: #d81b60; /* Rosa hovedfarge */
    text-align: center;
    margin-bottom: 30px;
    font-family: 'Montserrat', sans-serif;
    letter-spacing: 1.2px;
    font-weight: 700;
  }

  /* Tekst-boks */
  .personal-info {
    max-width: 950px;
    margin: 0 auto 60px;
    font-size: 1.25rem;
    line-height: 1.9;
    color: #333;
    text-align: center;
  }

  .highlight-box {
    background: #fff;
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0 6px 20px rgba(0,0,0,0.08);
  }

  .gallery-title {
    font-size: 1.8rem;
    color: #444;
    margin-bottom: 30px;
    text-align: center;
    font-weight: 600;
  }

  .gallery {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
  }

  .photo-card {
    position: relative;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
  }

  .photo-card img {
    width: 100%;
    height: 230px;
    object-fit: cover;
    display: block;
    transition: transform 0.4s ease;
  }

  .photo-card:hover img {
    transform: scale(1.05);
  }

  .photo-card .overlay {
    position: absolute;
    inset: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    background: rgba(216, 27, 96, 0.7); /* rosa overlay */
    color: white;
    font-size: 1rem;
    font-weight: 600;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .photo-card:hover .overlay {
    opacity: 1;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>
