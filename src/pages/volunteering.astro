<style is:global>
  body {
    background: #fff7f9;
    font-family: 'Poppins', sans-serif;
    margin: 0;
    padding: 0;
    color: #333;
  }

  .hero {
    text-align: center;
    padding: 80px 20px 50px;
    background: linear-gradient(135deg, #ffe4ec, #fff7f9);
    border-bottom: 2px solid #f3d4de;
  }

  .hero h1 {
    font-size: 3rem;
    color: #d81b60;
    margin-bottom: 15px;
  }

  .hero p {
    font-size: 1.2rem;
    color: #6a1b9a;
    margin-bottom: 30px;
  }

  .hero nav a {
    margin: 0 10px;
    padding: 10px 20px;
    border: 2px solid #d81b60;
    border-radius: 30px;
    color: #d81b60;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s;
  }

  .hero nav a:hover {
    background: #d81b60;
    color: white;
  }

  .card {
    background: white;
    border-radius: 15px;
    padding: 40px 25px;
    margin: 60px auto;
    max-width: 950px;
    box-shadow: 0 6px 18px rgba(0,0,0,0.08);
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  h2 {
    font-size: 2rem;
    color: #6a1b9a;
    margin: 20px 0;
  }

  h3 {
    font-size: 1.3rem;
    color: #d81b60;
    margin-top: 30px;
  }

  p {
    max-width: 750px;
    margin: 15px auto;
    font-size: 1.05rem;
    line-height: 1.7;
  }

  .gallery {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 25px;
    margin-top: 25px;
  }

  .gallery img {
    max-width: 420px;
