    border: 2px solid #d4e2f3;
  }

  .fintech-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 30px rgba(33, 150, 243, 0.25);
  }

  .fintech-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 25px;
  }

  .fintech-logo {
  max-width: 380px; /* gjÃ¸r den stÃ¸rre */
  margin: 0 auto 25px;
  display: block;
  background: white;
  border-radius: 16px;
