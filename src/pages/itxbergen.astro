    <title>IT X Bergen</title>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: #ffefef;
            margin: 0;
            padding: 0;
            color: #6a1b9a;
            overflow-x: hidden;
            scroll-behavior: smooth; /* Smooth scrolling */
        }

        main {
            min-height: 80vh;
            padding: 20px;
            text-align: center;
        }

        h2 {
            font-size: 2rem;
            color: #d81b60;
            margin-top: 50px;
            opacity: 0;
            transform: translateY(-20px);
            animation: fadeIn 0.8s forwards;
        }

        p {
            max-width: 700px;
            margin: 20px auto;
            font-size: 1.2rem;
            line-height: 1.6;
            opacity: 0;
            transform: translateY(-20px);
            animation: fadeIn 0.8s forwards;
            animation-delay: 0.3s;
        }

        /* Navigasjon */
        nav {
            margin: 25px 0 40px 0;
        }

        nav a {
            margin: 0 10px;
            padding: 10px 18px;
            border: 2px solid #d81b60;
            border-radius: 25px;
            color: #d81b60;
            text-decoration: none;
            font-weight: bold;
            transition: all 0.3s;
        }

        nav a:hover {
            background-color: #d81b60;
            color: #fff;
        }

        /* Bilder */
        img {
            max-width: 600px;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            margin: 20px auto;
            display: block;
            opacity: 0;
            transform: translateY(-20px);
            animation: fadeIn 0.8s forwards;
            animation-delay: 0.5s;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        img:hover {
            transform: scale(1.05);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
        }

        /* Fade-in animasjon */
        @keyframes fadeIn {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
