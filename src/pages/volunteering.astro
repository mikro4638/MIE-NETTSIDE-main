    box-shadow: 0 4px 14px rgba(0,0,0,0.15);
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .gallery img:hover {
    transform: scale(1.04);
    box-shadow: 0 8px 20px rgba(0,0,0,0.2);
  }

  .gallery.single img {
    max-width: 750px;
  }

  /* Inkogvito spesialeffekter */
  .inkogvito-card {
    background: linear-gradient(145deg, #ffffff, #fff5fb);
    border: 2px solid #f3d4de;
  }

  .inkogvito-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 30px rgba(216, 27, 96, 0.2);
  }

  .inkogvito-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 25px;
  }

  .inkogvito-logo {
  max-width: 420px;
  margin: 0 auto 30px;
  display: block;
  background: white;
  border-radius: 18px;
  padding: 20px;
  box-shadow: 0 8px 22px rgba(0,0,0,0.15);
  transform: rotate(-4deg); /* litt mer skjev */
  transition: transform 0.4s ease, box-shadow 0.4s ease;
}

.inkogvito-logo:hover {
  transform: rotate(-1deg) scale(1.1); /* retter seg nesten opp + zoom */
  box-shadow: 0 12px 32px rgba(106, 27, 154, 0.35);
}

  .interactive-title {
    font-size: 2.2rem;
    font-weight: 700;
    background: linear-gradient(90deg, #6a1b9a, #d81b60);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-top: 15px;
    position: relative;
  }

  .interactive-title::after {
    content: "";
    display: block;
    height: 3px;
    background: linear-gradient(90deg, #6a1b9a, #d81b60);
    margin: 6px auto 0;
    width: 0;
    border-radius: 2px;
    transition: width 0.4s ease;
  }

  .inkogvito-card:hover .interactive-title::after {
    width: 80%;
  }

  /* Fintech spesialeffekter */
  .fintech-card {
